{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "wizard/**/*.ts",
    "wizard/**/*.tsx",
    "thesis/**/*.ts",
    "thesis/**/*.tsx",
    "cli/**/*.ts"
  ],
  "exclude": ["**/*.test.ts"]
}
